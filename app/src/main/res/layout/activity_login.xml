<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="@drawable/bg_create_gradient">
    <ImageView
        android:src="@drawable/ic_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/logo_margin_top"
        android:layout_gravity="center_horizontal|top"
        />

    <com.facebook.login.widget.LoginButton
        android:id="@+id/btn_facebook"
        android:layout_width="@dimen/facebook_button_width"
        android:layout_height="@dimen/facebook_button_height"
        android:gravity="center_horizontal"
        android:paddingBottom="@dimen/facebook_button_padding"
        android:paddingTop="@dimen/facebook_button_padding"
        android:paddingLeft="@dimen/facebook_button_padding"
        android:textSize="@dimen/create_btn_text_size"
        android:layout_marginTop="@dimen/facebook_button_margin_top"
        android:layout_gravity="center"/>

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:progressDrawable="@drawable/primary_progress"
        android:layout_marginTop="@dimen/login_skip_margin_top"
        android:layout_gravity="center"
        android:visibility="gone"/>

    <com.devspark.robototextview.widget.RobotoTextView
        android:id="@+id/btn_skip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/login_skip_margin_top"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="@string/skip_login"
        android:textAllCaps="true"
        app:typeface="roboto_slab_bold"
        android:textColor="@color/white"
        android:textSize="@dimen/login_skip_text_size"/>

    <ImageView
        android:src="@drawable/ic_ice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        />

</FrameLayout>